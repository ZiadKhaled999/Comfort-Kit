{
  "manifest_version": 3,
  "name": "__MSG_ext_name__",
  "description": "__MSG_ext_description__",
  "version": "1.0.0",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "__MSG_ext_default_title__"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true,
      "match_origin_as_fallback": true
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "contextMenus",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "downloads",
    "alerts",
    "notifications",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess",
    "management",
    "clipboardWrite",
    "clipboardRead",
    "geolocation",
    "idle",
    "power",
    "system.cpu",
    "system.memory",
    "system.storage",
    "topSites",
    "bookmarks",
    "history",
    "favicon",
    "tabCapture",
    "tabGroups",
    "tts",
    "tts_engine",
    "unlimitedStorage",
    "platformKeys"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "optional_permissions": [
    "nativeMessaging",
    "proxy",
    "vpnProvider",
    "wallpaper",
    "sidePanel"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "content.css",
        "inject.js",
        "inject.css",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "omnibox": {
    "keyword": "comfort"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "incognito": "split",
  "minimum_chrome_version": "100.0.0.0",
  "author": {
    "email": "developer@example.com"
  },
  "homepage_url": "https://example.com",
  "update_url": "https://example.com/updates.xml",
  "short_name": "Comfort Kit",
  "requirements": {
    "plugins": {
      "npapi": true
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{d1d7d8e0-e9a4-4f5c-9c1d-1234567890ab}",
      "strict_min_version": "109.0"
    },
    "safari": {
      "strict_min_version": "15.0"
    }
  }
}
